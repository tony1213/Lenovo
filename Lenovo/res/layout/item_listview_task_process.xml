<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_process_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:src="@drawable/icon_process_point" />

    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_below="@id/iv_process_point"
        android:layout_marginLeft="27dp"
        android:background="@color/simple_orange" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_process_point"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_task_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开单"
            android:textColor="@color/simple_orange"
            android:textSize="@dimen/text_size_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间： 2016/01/22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单号：20160122-0008" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        style="@style/bt_style"
        android:layout_width="wrap_content"
        android:minHeight="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_task_info_frag_button_bg"
        android:text="接单"
        android:textColor="@color/blue" />

</RelativeLayout>